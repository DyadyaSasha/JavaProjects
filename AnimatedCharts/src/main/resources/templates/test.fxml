<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.Controller">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <ToggleButton mnemonicParsing="false" onAction="#setMaxBounds" text="100%" HBox.hgrow="ALWAYS" />
                <ToggleButton mnemonicParsing="false" onAction="#setHalfBounds" text="50%" HBox.hgrow="ALWAYS" />
                <ToggleButton mnemonicParsing="false" onAction="#setTwentyBounds" text="20%" HBox.hgrow="ALWAYS" />
                <ToggleButton mnemonicParsing="false" onAction="#setTenBounds" text="10%" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#addNewChart" text="new Chart" HBox.hgrow="ALWAYS" />
                <ChoiceBox HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

        </GridPane>
    </children>
</VBox>
